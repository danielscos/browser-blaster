{
  "manifest_version": 3,
  "name": "Browser Fucker",
  "version": "1.0",
  "description": "Fucks your browser with flashing colors and visual chaos",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["chaos.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Browser Chaos"
  }
}
